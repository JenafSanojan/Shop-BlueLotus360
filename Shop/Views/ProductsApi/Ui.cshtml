@{
}
@{
    ViewData["Title"] = "Product Management APIs";
    var id = 0; // Set default value for id, you can change it as per your requirement
}

<h1>@ViewData["Title"]</h1>

<div class="action-buttons">
    <div class="mt-3">
        <a asp-action="Index" class="btn btn-primary">View All Products</a>
    </div>
    <div class="mt-3">
        <input type="number" name="ID" id="productId" class="form-control mb-1" placeholder="Enter Product ID" value="@id">
        <a id="detailsButton" asp-action="Details" asp-route-id="@id" class="btn btn-primary">View Product Details</a>
    </div>
