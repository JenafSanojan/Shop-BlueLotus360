    <div class="mt-3">
        <a asp-action="Edit" class="btn btn-warning">Edit Product</a>
    </div>
    <div class="mt-3">
        <a asp-action="Delete" class="btn btn-danger">Delete Product</a>
    </div>
    *@
</div>

@section Scripts {
    <script>
        document.getElementById("productId").addEventListener("input", function () {
            var id = document.getElementById("productId").value;

            var detailsButton = document.getElementById("detailsButton");
            detailsButton.setAttribute("href", "/ProductsApi/Details/" + id);
        });
    </script>
}
