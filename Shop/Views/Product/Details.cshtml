@{
}

@model Shop.Models.Entities.Product

@{
    ViewData["Title"] = "Product Details";
}

<h1 class="mb-3">Product Details</h1>

<div>
    <dl class="row dl-horizontal">
        <dt class="col-sm-3 ">Id</dt>
        <dd class="col-sm-9">@Model.Id</dd>

        <dt class="col-sm-3 ">Product Id</dt>
        <dd class="col-sm-9">@Model.ProductId</dd>

        <dt class="col-sm-3 ">Name</dt>
        <dd class="col-sm-9">@Model.Name</dd>

        <dt class="col-sm-3 ">Category</dt>
        <dd class="col-sm-9">@Model.Category</dd>

        <dt class="col-sm-3 ">Price</dt>
        <dd class="col-sm-9">@Model.Price</dd>

        <dt class="col-sm-3 ">Quantity</dt>
        <dd class="col-sm-9">@Model.Quantity</dd>

        <dt class="col-sm-3 ">SKU</dt>
        <dd class="col-sm-9">@Model.SKU</dd>

        <dt class="col-sm-3 " mt-2>Description</dt>
        <dd class="col-sm-9">@Model.Description</dd>

        @if (Model.Image != null)
        {
            <dt class="col-sm-3 mt-3">Image</dt>
            <dd class="col-sm-9"><img src="data:image/jpeg;base64,@(Convert.ToBase64String(Model.Image))" alt="Product Image" width="auto" height="200" /></dd>
        }
    </dl>
</div>

<a class="mt-3" asp-area="" asp-controller="Product" asp-action="Index">Back to Product List</a>
